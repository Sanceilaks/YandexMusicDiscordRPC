{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/YandexMusicDiscordRPC/YandexMusicDiscordRPC.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile",
			"options": {
				"shell": {
					"executable": "pwsh",
					"args": ["-C"]
				}
			}
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/YandexMusicDiscordRPC/YandexMusicDiscordRPC.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/YandexMusicDiscordRPC/YandexMusicDiscordRPC.csproj"
			],
			"problemMatcher": "$msCompile"
		}
	]
}